+int dts_get_extension_index( dts_info_t *info, uint8_t *extension_index )
+{
+    if( info->buffer_end - info->buffer_pos < 6 )
+        return -1;
+    *extension_index = info->buffer_pos[5] >> 6;
+    return 0;
+}
