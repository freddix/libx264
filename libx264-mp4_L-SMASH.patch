+const static mp4sys_importer_functions mp4sys_eac3_importer =
+{
+    "Enhanced AC-3",
+    1,
+    mp4sys_eac3_probe,
+    mp4sys_eac3_get_accessunit,
+    mp4sys_eac3_get_last_delta,
+    mp4sys_eac3_cleanup
+};
