+    bs->data = NULL;
+    bs->alloc = 0;
+    bs->store = 0;
+    bs->pos = 0;
+}
+
+void lsmash_bs_alloc( lsmash_bs_t *bs, uint64_t size )
+{
+    if( (bs->alloc >= size) || bs->error )
+        return;
+    uint64_t alloc = size + (1<<16);
+    uint8_t *data;
+    if( !bs->data )
+        data = malloc( alloc );
+    else
+        data = realloc( bs->data, alloc );
+    if( !data )
+    {
+        lsmash_bs_free( bs );
+        bs->error = 1;
+        return;
+    }
+    bs->data  = data;
+    bs->alloc = alloc;
+}
