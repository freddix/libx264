+    dcd->bufferSizeDB = bufferSizeDB;
+    dcd->maxBitrate = maxBitrate;
+    dcd->avgBitrate = avgBitrate;
+    debug_if( mp4sys_remove_DecoderConfigDescriptor( esd ) )
